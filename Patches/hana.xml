<Patch>
    <!-- remove wool -->
    <Operation Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[defName="hanaWool"]</xpath>
    </Operation>

    <!-- remove Shearable setting -->
    <Operation Class="PatchOperationRemove">
        <xpath>/Defs/ThingDef[defName="hana"]/comps/li[@Class="CompProperties_Shearable"]</xpath>
    </Operation>

    <!-- remove Milkable setting -->
    <Operation Class="PatchOperationRemove">
        <xpath>/Defs/ThingDef[defName="hana"]/comps/li[@Class="CompProperties_Milkable"]</xpath>
    </Operation>
</Patch>
